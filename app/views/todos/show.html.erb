<div>
  <div>
    <h1>
      Your todo list
    </h1>
  </div>
</div>

<hr>

<div>
  <div>
    <h2>
      Add a new todo
    </h2>

    <form action="/insert_todo" method="post">
      <div>
        <label for="content_box">
          Describe the task:
        </label>

        <input type="text" id="content_box" name="query_content">
      </div>

      <button>
        Add to Next Up
      </button>
    </form>
  </div>
  
      <div class="next up">
          <h2>Next Up</h2>
    <%# @list_of_todos.each do |a_todo| %>
        
        <ul>
          <li>
          <div><%= @the_todo.content %></div>         
         
          <small>Added<%= time_ago_in_words(@the_todo.created_at) %> ago <a href="/delete_todo/<%= @the_todo.id %>">delete</a>
          </small>
          <form action="/modify_todo/<%= @the_todo.id %>" method="post">
            <input type="hidden" name="query_status" value="in_progress">
            <button>Move to In Progress</button>
          </form>
          </li>
        </ul>
        <%# end %>

<div class="in_progress">
          <h2>In Progress</h2>
      
      <%# @the_todo.each do |a_to_do| %>
        
        <ul>
          <li>
          <div><%= @the_todo.content %></div>         
         
          <small>Added<%= time_ago_in_words(@the_todo.created_at) %> ago <a href="/delete_todo/<%= @the_todo.id %>">delete</a>
          </small>
          <form action="/modify_todo/<%= @the_todo.id %>" method="post">
            <input type="hidden" name="query_status" value="in_progress">
            <button>Move to In Done</button>
          </form>
          </li>
        </ul>
        <%# end %>
      </div>
    